{% extends 'base.html.twig' %}

{% block body %}

<main class="container">

    <div class="jumbotron mt-3">
        <h1 class="display-3">Booking</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">+ d'infos</a>
        </p>
    </div>

    <h3 class="h1 mt-3 mb-4">Annonces les mieux not√©es</h3>
    <section class="row">

        {% for data in ads %}

            {% include 'ad/_ad.html.twig' with {'ad':data.annonce} %}

        {% endfor %}

    </section>
    <h3 class="h1 mt-5 mb-4">Nos meilleurs annonceurs</h3>
    <section class="row">

        {% for data in users %}

            <article class="col">

                <div class="card mb-3">
                    <h3 class="h4 card-header text-white bg-info">{{data.user.fullname}}</h3>
                    <div class="card-body">
                        <img src="{{data.user.avatar}}" alt="avatar de {{data.user.fullname}}" class="float-left mr-3">
                        <p>{{data.user.introduction}}</p>
                        <a href="{{path('user_show',{'slug':data.user.slug})}}" class="btn btn-info">+ d'infos</a>
                    </div>
                </div>
                        
            </article>

        {% endfor %}
        
    </section>
        

</main>


{% endblock %}