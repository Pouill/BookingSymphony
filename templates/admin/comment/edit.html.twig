{% extends 'admin/base.html.twig' %}

{% block title %}Modifier un commentaire{% endblock %}

{% block body %}

    <main class="container-fluid">
        <h1 class="my-3 p-3 text-center">Modification du commentaire n° {{comments.id}}</h1>
        <div class="row mt-5">
            <div class="col-8 offset-2 p-5 alert alert-info">
                <p>Anonnce liée : {{comments.ad.title}}</p>
                <p>Auteur : {{comments.ad.author.fullName}}</p>
                <p>Date de création : {{comments.createdAt|date('d/m/Y H:i')}}</p>
                <p>Note donnée : {{comments.rating}}</p>
            </div>
        </div>
        <div class="col-8 offset-2 px-5">
            {{form_start(form)}}
            {{form_widget(form)}}
            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Enregister les modifications</button>
            {{form_end(form)}}
        </div>
    </main>

{% endblock %}
