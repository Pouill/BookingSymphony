{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>
    <table class="table table-hover">
        <thead class="table-dark">
            <th>Id</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th class="text-center">RÃ©servation</th>
            <th class="text-center">Note</th>
            <th class="text-center">Actions</th>
        </thead>
        <tbody>
        {% for ad in pagination.data %}
            <tr>
                <td>{{ad.id}}</td>
                <td>{{ad.title}}</td>
                <td>
                    <img src="{{ad.author.avatar}}" alt="Avatar de {{ad.author.fullName}}" class="avatar avatar-small">
                    {{ad.Author.fullName}}
                </td>
                <td class="text-center"><span class="badge badge-info rounded">{{ad.bookings|length}}</span></td>
                <td class="text-center"><span class="badge badge-success rounded">{{ad.averageRatings|number_format(1,',',' ')}}</span></td>
                <td class="text-center">
                    <a href="{{path('admin_ads_edit',{'id':ad.id})}}" class="btn btn-primary"><i class="far fa-edit"></i></a>
                    <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ pagination.display() }}
</div>
{% endblock %}
